grammar PublisherGrammar
  include CommonGrammar

  rule publisher
    (publisher_place ':' space publisher_name) {
      {:publisher => {:name => publisher_name, :place => publisher_place}}
    }
  end

  rule publisher_place
    /[^a-z:\d][^:\d]{2,}/u
  end

  rule publisher_name
    .+
  end
end
