grammar CitationGrammar
  rule citation
    book_citation
  end

  rule book_citation
    publisher
  end

  rule publisher
    (publisher_place ': ' publisher_name) {
      {:publisher => {:name => publisher_name, :place => publisher_place}}
    }
  end

  rule publisher_place
    [^:]+
  end

  rule publisher_name
    .+
  end
end
