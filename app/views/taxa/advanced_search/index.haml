- @title = 'Advanced Search'

- content_for :head do
  = javascript_include_tag  'qtip'

- content_for :page_contents do
  .search_section
    Find
    = select_tag 'rank', options_for_select(['Species', 'Genus'], params['rank'])
    described in the year
    = text_field_tag :year, params[:year]
    = image_tag 'help.png', class: 'help_icon'
    = submit_tag "Go"

  %hr

  .results_section
    - taxon = Taxon.find_by_name 'Atta'
    - formatter = Formatters::CatalogTaxonFormatter.new taxon, current_user

    - for result in [130629]
      = render 'taxa/advanced_search/result', taxon: taxon, result: result
