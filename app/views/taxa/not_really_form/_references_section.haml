-unless taxon.kind_of? SpeciesGroupTaxon
  .references_section.callout
    %h5.callout-header
      References
      .right.references_section_buttons
        =link_to 'Add', new_taxa_reference_section_path(taxon), class: 'btn-normal btn-tiny', id: 'add-reference-section-button'

    .reference_sections
      -taxon.reference_sections.each do |item|
        =render 'reference_sections/taxt_editor_template', item: item
