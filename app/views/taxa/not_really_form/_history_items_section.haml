-# ".button" is required to make ".disabled" work.

.history_items_section.callout
  %h5.callout-header
    History
    .right.history_items_section_buttons
      %button#add-history-item.submit.btn-normal.btn-tiny.button Add
      %a#start-reordering-history-items.btn-normal.btn-tiny.button Reorder
  .history_items{data: {taxon_id: taxon.id}}
    -taxon.history_items.each do |history_item|
      =render 'taxon_history_items/panel', item: history_item
  .history_item_template
    =render 'taxon_history_items/panel', item: TaxonHistoryItem.new(taxon_id: taxon.id)
