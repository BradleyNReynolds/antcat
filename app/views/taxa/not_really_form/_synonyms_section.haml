.synonyms_section
  .section_header.ui-widget-header.ui-corner-top
    .left=title
    .buttons.right
      %button.add.btn-tiny Add
    .clear

  .ui-dialog-content.ui-widget-content.ui-corner-bottom
    =render 'taxa/not_really_form/synonym_form', taxon: taxon, junior_or_senior: junior_or_senior
    -synonyms.each do |synonym|
      -synonym_taxon = Taxon.find(synonym.synonym_taxon_id)
      .synonym_row
        %small="##{synonym_taxon.id}"
        =synonym_taxon.name_with_fossil
        %small=synonym_taxon.author_citation
        %button.btn-tiny.delete.btn-delete{data: { taxon_id: taxon.id, synonym_id: synonym.id} } Delete
        %button.btn-saves.btn-tiny.reverse_synonymy{data: { taxon_id: taxon.id, synonym_id: synonym.id} } Reverse synonymy
