=enable_tooltips

-content_for :head do
  =javascript_include_tag 'widgets/panel'
  =javascript_include_tag 'widgets/form', 'widgets/ajax_form', 'widgets/nested_form'
  =javascript_include_tag 'widgets/reference_picker'
  =javascript_include_tag 'widgets/reference_field'
  =javascript_include_tag 'widgets/name_field'
  =javascript_include_tag 'widgets/reference_popup', 'widgets/name_popup', 'widgets/taxt_editor'
  =javascript_include_tag 'controllers/taxa/form/_bundle'
  =javascript_include_tag 'controllers/taxa/not_really_form/_bundle'
  =javascript_include_tag 'taxon_select'

-# These used to be `hidden_field_tag`s, but they have been been put
-# in prison outside of the form to avoid sending non-relevant POST params.
.used-in-javascripts{style: "display: none"}
  =text_field_tag 'current_taxon_id', @taxon.id
  =text_field_tag 'taxon_name_string', @taxon.name_cache
  =text_field_tag 'species_id', @taxon.rank.to_s == "subspecies" ?  @taxon.species_id : true
  =text_field_tag 'reset_epithet', @reset_epithet
  =text_field_tag 'is_superadmin', user_is_superadmin?

-url = @taxon.new_record? ?  '/taxa': "/taxa/#{@taxon.id}"
-method = @taxon.new_record? ? 'post' : 'put'
=form_for @taxon, as: :taxon, url: url, method: method, html: {class: 'taxon_form ui-widget'} do |form|

  -# These fields are used to pass pre-caulculated data to JavaScript,
  -# and they're magically appended to the POST params.
  =hidden_field_tag 'rank_to_create', params[:rank_to_create]
  =hidden_field_tag 'parent_id', params[:parent_id]
  =hidden_field_tag 'taxon_rank', @taxon.rank
  =hidden_field_tag 'collision_resolution', params[:collision_resolution]
  =hidden_field_tag 'previous_combination_id', @previous_combination ? @previous_combination.id : nil

  =render 'shared/errors_for', resource: @taxon

  .fields_section.section.ui-widget-content.ui-corner-all
    =render 'taxa/form/name_status_flags_section', taxon: @taxon, form: form, default_name_string: @default_name_string
    =render 'taxa/form/protonym_section',          taxon: @taxon, form: form
    =render 'taxa/form/type_section',              taxon: @taxon, form: form

    .buttons_section
      -# TODO `@possible_homonym` is not declared anywhere.
      =render 'taxa/form/buttons_save_section', taxon: @taxon, possible_homonym: @possible_homonym
      -unless @taxon.new_record?
        =render 'taxa/form/buttons_taxon_operations', taxon: @taxon

  -# These should be moved to outside of the form, but that will require a lot
  -# of effort because the JavaScripts are tightly coupled to `AntCat.TaxonForm`.
  -unless @taxon.new_record?
    =render 'not_really_form', taxon: @taxon

