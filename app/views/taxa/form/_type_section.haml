.callout
  %h5.callout-header Type
  %table.unstriped.no-border
    -if taxon.kind_of? SpeciesGroupTaxon
      -# TODO: Rename columns in database to match view.
      %tr
        %td.caption=form.label :primary_type_information
        %td#published_type_information_taxt_editor.taxt_editor
          =render 'taxt_editors/show', name: 'taxon[published_type_information]', value: TaxtConverter[taxon.published_type_information].to_editor_format
      %tr
        %td.caption=form.label :secondary_type_information
        %td#additional_type_information_taxt_editor.taxt_editor
          =render 'taxt_editors/show', name: 'taxon[additional_type_information]', value: TaxtConverter[taxon.additional_type_information].to_editor_format
      %tr
        %td.caption=form.label :type_notes
        %td#type_notes_taxt_editor.taxt_editor
          =render 'taxt_editors/show', name: 'taxon[type_notes]', value: TaxtConverter[taxon.type_notes].to_editor_format

      %tr
        %td.caption
          =form.label :biogeographic_region do
            Biogeographic region
            =tooltip_icon "type.biogeographic_region", scope: :taxa
        %td=form.select :biogeographic_region, biogeographic_region_options_for_select(taxon.biogeographic_region)

    -else
      %tr
        =form.fields_for :type_name do |type_name_form|
          -if taxon.type_name.new_record?
            =hidden_field_tag 'taxon[type_name_attributes][id]'
          %td.caption=type_name_form.label :name
          %td
            #type_name_field
              =render 'name_fields/panel', name_string: taxon.type_name.try(:name)
      %tr
        %td.caption=form.label :type_fossil, 'Fossil'
        %td=form.check_box :type_fossil

      %tr
        %td.caption=form.label :type_taxt, 'Notes'
        %td#type_taxt_editor.taxt_editor
          =render 'taxt_editors/show', name: 'taxon[type_taxt]', value: TaxtConverter[taxon.type_taxt].to_editor_format
