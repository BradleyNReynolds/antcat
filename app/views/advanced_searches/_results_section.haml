-#Locals: taxa, search_results_message

.results_section

  .results_header
    .left.results_message
      = search_results_message
    .left
      = will_paginate taxa
    .left.buttons
      .download_button
    .clear

  .results_items
    - if taxa && taxa.count > 0
      %hr
      - for taxon in taxa
        = render 'result', taxon: taxon
      %hr
      .left
        = will_paginate taxa
