-content_for :head do
  =javascript_include_tag 'markdown_and_friends', 'taxt_editor'

-@title = "New History Item"
-breadcrumb :new_taxon_history_item, @item

=form_for @item, url: "/taxa/#{@item.taxon_id}/taxon_history_items" do |f|
  =render "shared/errors_for", resource: @item
  .row
    .medium-6.columns
      =text_area_tag :taxt, @item.taxt, rows: 5, name: 'taxon_history_item[taxt]',
        data: { has_linkables: true, previewable: true, previewable_title: "History item" }
  .row
    .medium-3.columns
      =text_field_tag :edit_summary, nil, placeholder: "Edit summary (optional)", maxlength: Activity::EDIT_SUMMARY_MAX_LENGTH

  .row
    .medium-3.columns.end
      =f.button 'Save', type: :submit, class: "btn-saves"
