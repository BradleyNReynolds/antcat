!!!
%html{xmlns: 'http://www.w3.org/1999/xhtml', 'xml:lang' => 'en', lang: 'en'}
  %head
    %title= make_title @title
    %meta{'http-equiv' => "content-type", content: "text/html;charset=UTF-8"}
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}

    = csrf_meta_tag

    :javascript
      window.AntCat = {}
      AntCat.user_can_edit = #{!!user_can_edit?}
      AntCat.testing = #{Rails.env == 'test'}
      AntCat.disable_taxon_browser_autohide = #{Rails.env == 'test' && !$enable_taxon_browser_autohide}

    = javascript_include_tag 'google_analytics'
    = javascript_include_tag 'application'

    = stylesheet_link_tag 'application'
    = stylesheet_link_tag 'foundation_and_overrides'
    = stylesheet_link_tag 'bootstrap_custom'
    = stylesheet_link_tag 'jquery_overrides'
    = stylesheet_link_tag "controllers/#{params[:controller]}" if AntCat::Application.assets.find_asset "controllers/#{params[:controller]}"
    = stylesheet_link_tag 'dev_env' if Rails.env == 'development' && !params[:prod]
    -# dev-specific CSS. Suffix the url with ?prod=pizza to disable.

    = favicon_link_tag
    = yield :head

    %body
      #page
        =render "navigation"
        =render "breadcrumbs"
        =render "subnavigation"

        =render "shared/flash_messages"

        #content
          .row
            .small-12.columns
              = content_for?(:page_contents) ? yield(:page_contents) : yield

        =render "footer"
