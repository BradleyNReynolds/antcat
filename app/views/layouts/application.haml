!!!
%html{xmlns: 'http://www.w3.org/1999/xhtml', 'xml:lang' => 'en', lang: 'en'}
  %head
    %title=make_title @title
    %meta{'http-equiv' => "content-type", content: "text/html;charset=UTF-8"}
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}

    =csrf_meta_tag

    :javascript
      window.AntCat = {}
      AntCat.user_can_edit = #{!!user_can_edit?}
      AntCat.testing = #{Rails.env.test?}

    -if Rails.env.production?
      =javascript_include_tag 'all_pages/google_analytics'
    =javascript_include_tag 'application'
    -if current_user
      =javascript_include_tag 'logged_in_only'

    =stylesheet_link_tag 'foundation_and_overrides'
    =stylesheet_link_tag 'application'
    =stylesheet_link_tag 'jquery_overrides'
    =dev_css

    =favicon_link_tag
    =yield :head

    %body{id: "#{params[:controller].tr("/", "_")}-controller"}
      #header
        =render "navigation"
        =render "breadcrumbs"
        =render "subnavigation"

      #content
        =render "site_notices/unread_site_notices_flash_message.haml"
        =render "shared/flash_messages"
        -if controller_name == "catalog"
          =yield
        -else
          .row
            .small-12.columns
              =yield

      =render "feedback/feedback_modal"
