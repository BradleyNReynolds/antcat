!!!
%html{lang: 'en'}
  %head
    %title=title_tag @title
    %meta{charset: "utf-8"}
    %meta{description: "An online catalog of the ants of the world."}
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
    %meta{content: "#0071f4", name: "theme-color"}

    =csrf_meta_tag

    =favicon_link_tag 'favicon_96x96.png'

    =javascript_include_tag 'jquery'

    %link{href: "https://fonts.googleapis.com/css?family=Montserrat", rel: "stylesheet"}
    %link{href: "https://fonts.googleapis.com/css?family=Raleway", rel: "stylesheet"}

    =stylesheet_link_tag 'foundation_and_overrides'
    =stylesheet_link_tag 'vendor'
    =stylesheet_link_tag 'application'
    =stylesheet_link_tag 'dev_css' if include_dev_css?
    =stylesheet_link_tag 'test_css' if Rails.env.test?

    =javascript_include_tag 'application'

    =yield :javascripts

    %body{id: current_controller_css_id(params[:controller])}
      -unless params[:controller] == 'feedback'
        %button#feedback-button.hide-for-small-only=link_to 'Suggest edit', new_feedback_path(page: current_page_for_feedback)

      .main-container
        %header#header
          .row.collapse
            .small-12.columns
              =render "navigation"

        %section#content
          .row.collapse
            =render "breadcrumbs"
            =render "flash_messages"
            .small-12.columns.collapse
              =yield

        =yield :after_content

        %footer#taxon-browser-sticky-target-js-hook=render "footer"

      -if Rails.env.production?
        =render "google_analytics"

      -if current_user
        =javascript_include_tag 'logged_in_only'
      =stylesheet_link_tag 'font_awesome_and_custom_icons'
