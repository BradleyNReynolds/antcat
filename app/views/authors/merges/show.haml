-@title = 'Merge Authors'
-breadcrumb :merge_authors, @author

-content_for :head do
  =javascript_include_tag 'controllers/authors/merges'

=form_tag author_merges_path do
  =hidden_field_tag :author_to_merge_id, @author_to_merge.id
  .row
    .medium-6.columns
      %fieldset.fieldset
        %legend Target author
        =render 'author', author: @author

    .medium-6.columns
      %fieldset.fieldset
        %legend Author to merge into target
        =render 'author', author: @author_to_merge

  .row
    .medium-12.columns
      .callout
        %p
          %h5 Please confirm
          %ul
            -[@author, @author_to_merge].each do |author|
              -author.names.each do |author_name|
                %li=author_name.name
          Click this button to make the above names refer to the same author, so that searching for one of the names finds the others.

        %p=button_tag 'Merge these authors', type: "submit", data: { confirm: 'Do you want to merge these authors?' }, class: "btn-warning"
