-@title = 'Merge Authors'
-breadcrumb :merge_authors, @author

-content_for :head do
  =javascript_include_tag 'controllers/authors/merges'

=form_tag author_merges_path, method: :get do
  .row
    .medium-6.columns
      %fieldset.fieldset
        %legend Target author
        =render 'author', author: @author

    .medium-6.columns
      %fieldset.fieldset
        %legend Author to merge into target
        =text_field_tag :author_to_merge_name, params[:author_to_merge_name], class: 'authors-autocompletion'
        =button_tag type: "submit", class: "btn-normal" do
          ="Next"
