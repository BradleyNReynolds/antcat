-@title = 'Authors'
-breadcrumb :authors

%table
  %thead
    %th Author Names
    -if user_can_edit?
      %th Edit
  -@authors.each do |author|
    %tr
      %td=author.names.map(&:name).join('; ')
      -if user_can_edit?
        %td=link_to 'edit', edit_author_path(author)

=will_paginate @authors
