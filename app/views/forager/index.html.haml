- @title = 'Forager'

- content_for :head do
  = javascript_include_tag 'forager'
  = javascript_include_tag 'ext/jquery.scrollTo-1.4.2-min'
  = stylesheet_link_tag 'forager'

- content_for :page_header do
  #navigation_bar
    .actions
      = link_to 'References', references_path
      |
      = link_to 'Taxatry', taxatry_path
  .title
    %h2.left An Online Catalog of the Ants of the World
    .right
      %h3
        by Barry Bolton
        %span.date 3 Jan 2011
    .clear

#index
  - @index_header_taxa.each do |index_header_taxon|
    .index_header_taxon
      - label_and_classes = taxon_label_and_css_classes index_header_taxon[:taxon]
      = link_to label_and_classes[:label], index_header_taxon[:path], :class => label_and_classes[:css_classes]
    %hr

  - index_items = make_index_groups @taxa, 50, 10
  - index_items.each do |item|
    .index_taxon
      = link_to item[:label], item[:id].to_s, :class => item[:css_classes]

#browser
  - @taxa.each do |taxon|
    .taxon_header{:id => taxon.id}
      - unless @rank == 'genus'
        = link_to taxon.name, forager_path(:rank => @child_rank, :id => taxon), :class => @child_rank
    .taxonomic_history= raw taxon.taxonomic_history
  - 100.times do
    .taxon_header
      &nbsp;

.clear
