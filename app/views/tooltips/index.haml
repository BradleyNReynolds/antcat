-title "Edit Tooltips"
-breadcrumb :tooltips

-if user_is_at_least_helper?
  -content_for :breadcrumbs_right do
    =link_to 'New Tooltip', new_tooltip_path, class: "btn-normal"

%table#tooltips
  %thead
    %tr
      %th Key
      %th Page scope
      %th Tooltip text
  %tbody
    -if @grouped_tooltips.empty?
      %tr
        %td{colspan: 4}
          No tooltips found.
          =link_to 'Be a hero and create the first one?', new_tooltip_path
    -else
      -@grouped_tooltips.each do |scope, tooltips|
        %tr
          %th.scope{colspan: 4}
            =scope.capitalize
        -tooltips.each do |tooltip|
          %tr
            %td=link_to tooltip.key, tooltip
            %td=tooltip.scope
            %td=tooltip.text
