=enable_tooltips

=form_for tooltip do |f|
  =render 'shared/errors_for', resource: tooltip
  .row
    .medium-6.columns
      =f.label :key
      =f.text_field :key

      =f.label :scope
      =f.text_field :scope

  .row
    .medium-6.columns
      =f.label :text
      =f.text_area :text, cols: 40, rows: 5

  .row
    .medium-6.columns
      =f.check_box :key_enabled
      =f.label :key_enabled do
        Enabled

      .actions
        =f.button type: :submit, class: "btn-saves"
