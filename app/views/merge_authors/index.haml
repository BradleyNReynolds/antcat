-@title = 'Merge Authors'
-breadcrumb :merge_authors

-content_for :head do
  =javascript_include_tag 'controllers/merge_authors/index'

.row
  -@panels.each do |panel|
    .medium-6.columns
      =render 'panel', panels: @panels, panel: panel

-if @authors.count >= 2 && user_is_editor?
  .row
    .medium-12.columns
      .callout
        =form_tag merge_authors_merge_path do
          -@panels.each do |panel|
            =hidden_field_tag 'terms[]', panel.term
          %p
            %h5 Please confirm
            %ul
              -@names.sort.each do |name|
                %li=name
            Click this button to make the above names refer to the same author, so that searching for one of the names finds the others.

          %p=button_tag 'Merge these authors', type: "submit", data: { confirm: 'Do you want to merge these authors?' }, class: "btn-warning"
