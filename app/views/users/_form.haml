=form_for user do |f|
  =render "shared/errors_for", resource: user
  .row
    .medium-6.columns.end
      =f.label :name
      =f.text_field :name

      =f.label :email
      =f.text_field :email

      =f.label :password
      =f.password_field :password

      =f.check_box :superadmin
      =f.label :superadmin

      =f.check_box :editor
      =f.label :editor

      =f.check_box :helper
      =f.label :helper_editor

  .row
    .medium-6.columns.end
      =f.check_box :locked
      =f.label :locked_account

      =f.check_box :deleted
      =f.label 'Soft-deleted'

  .row
    .medium-6.columns.end
      =button_tag append_superadmin_icon("Save"), class: "btn-saves"
