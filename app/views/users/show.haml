-@title = @user.name
-breadcrumb :user, @user

-if user_is_superadmin?
  .buttons-right
    =link_to "Edit as superadmin", edit_user_path(@user), class: "btn-normal"

-if current_user == @user
  .buttons-right
    =link_to "Change my password/name/email", edit_user_registration_path, class: "btn-normal"
%p
  %strong Name:
  =@user.name
  =@user.decorate.user_badge

%p
  %strong Email:
  =link_to @user.email, "mailto:#{@user.email}"

.row.margin-top
  .large-12.columns
    %h5
      #{@user.name}'s most
      =link_to "recent activity", activities_path(user_id: @user.id)
    =render "activities/table", activities: @recent_user_activities

.row.margin-top
  .large-12.columns
    %h5
      #{@user.name}'s most
      =link_to "recent comments", comments_path(user_id: @user.id)
    =render "comments/comments_table", comments: @recent_user_comments
