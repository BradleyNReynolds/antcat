-@title = 'Users'
-breadcrumb :users

-if user_is_superadmin?
  .buttons_right
    =link_to "New (for superadmins)", new_user_path, class: "btn-normal"

%table
  %thead
    %th Name
    %th Editor
    %th Email
  -@users.each do |user|
    %tr
      %td=user.decorate.user_page_link
      %td=user.can?(:edit, :catalog) ? 'Yes' : dash
      %td=user.email
