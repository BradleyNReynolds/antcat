-@title = 'Users'
-breadcrumb :users

-if user_is_superadmin?
  =content_for :breadcrumbs_right do
    =link_to append_superadmin_icon("New"), new_user_path, class: "btn-normal"

%table.stack
  %tbody
  -@users.each do |user|
    %tr{style: ('background-color: #fce6e2' if (user.locked? || user.deleted?))}
      %td=user.decorate.user_page_link
      %td
        =user.decorate.user_badge
        -if user_is_editor?
          -if user.superadmin?
            %span.secondary-label.rounded-badge superadmin
      -if user_is_editor?
        %td
          -if user.locked?
            %span.warning-label.rounded-badge locked
          -if user.deleted?
            %span.warning-label.rounded-badge soft-deleted
        %td
          Registered
          =user.created_at.year
      %td=user.email
