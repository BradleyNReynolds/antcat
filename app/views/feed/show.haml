-@title = "Feed"
-breadcrumb :feed

-if @activities.empty?
  No activities.
-else
  %table.feed
    %thead
      %tr
        %th
        %th What
        %th When
    -@activities.each do |activity|
      %tbody
        %tr
          %td.icon=activity_icon activity
          %td
            =link_activity_user activity
            =format_activity activity
          %td
            =time_ago_in_words(activity.created_at)
            ago
            -if user_is_superadmin?
              =link_to "Delete", feed_activity_path(activity), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-delete btn-tiny"

=will_paginate @activities
