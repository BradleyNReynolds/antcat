- @title = 'Taxatry'

- content_for :head do
  = javascript_include_tag 'taxatry'
  = stylesheet_link_tag 'taxatry'

- content_for :page_header do
  .title
    %h2.left Taxatry
    .left
      - form_tag taxatry_path, :method => 'get', :id => 'search_form' do
        .search
          Search for
          = text_field_tag "q", params[:q]
          = submit_tag  "Go &#187;"
    .clear

%span.taxon_header
  = @taxon_header_name
%span
  = @taxon_header_status

.taxonomic_history
  = @taxonomic_history

%table.browser
  %tr

    = render :partial => 'rank', :locals => {:items => @subfamilies, :selected_item => @selected_subfamily, :table_class => 'subfamilies'}

    = render :partial => 'rank', :locals => {:items => @genera, :selected_item => @selected_genus, :table_class => 'genera'}

    = render :partial => 'rank', :locals => {:items => @species, :selected_item => @selected_species, :table_class => 'species'}

%div.clear
