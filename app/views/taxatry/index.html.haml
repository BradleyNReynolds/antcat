- @title = 'Taxatry'

- content_for :head do
  = javascript_include_tag 'taxatry'
  = stylesheet_link_tag 'taxatry'

- content_for :page_header do
  .title
    %h2.left Taxatry
    .left
      - form_tag taxatry_path, :method => 'get', :id => 'search_form' do
        .search
          Search for name
          = select_tag :search_type, options_for_select(['matching', 'beginning with', 'containing'], params[:search_type])
          = text_field_tag "q", params[:q]
          = submit_tag  "Go &#187;"
          = @search_results_message
    .clear

= render :partial => 'search_results', :locals => {:search_results => @search_results, :taxon => @taxon}

%span.taxon_header
  = @taxon_header_name
%span
  = @taxon_header_status

.taxonomic_history
  = @taxonomic_history

%table.browser
  %tr

    = render :partial => 'rank', :locals => {:items => @subfamilies, :selected_item => @selected_subfamily, :table_class => 'subfamilies'}

    = render :partial => 'rank', :locals => {:items => @genera, :selected_item => @selected_genus, :table_class => 'genera'}

    = render :partial => 'rank', :locals => {:items => @species, :selected_item => @selected_species, :table_class => 'species'}

%div.clear
