-# Locals: taxon, change

%div.change_header
  - if change.change_type != 'delete' and not taxon.nil?
    %div.change_description
      %div.name.left= format_adder_name change.change_type, taxon.added_by(change.id)
      %div.taxon.left= link_to_taxon taxon
      %div.edit_button.left= edit_button taxon
      %div.undo_button.left= undo_button taxon, change
      %div.approve_button.left= approve_button taxon, change
      %div.time.right= format_time_ago change.created_at
      %div.clear

    - if change.approver
      %div.change_status
        %div.approver.left= format_approver_name change.approver
        %div.approval_time.right= format_time_ago change.approved_at
        %div.clear
  - else
    %div.change_description
      %div.name.left= format_adder_name change.change_type, taxon.added_by(change.id)
      %div.taxon.left=format_taxon_name taxon.name
      %div.undo_button.left= undo_button taxon, change
      %div.approve_button.left= approve_button taxon, change
      %div.clear

