-@title = @script.title
-breadcrumb :database_script, @script

-content_for :head do
  =javascript_include_tag "sortable_tables"

.row.collapse
  .medium-8.columns
    %h5
      -if @script.topic_areas.present?
        =succeed ":" do
          =@script.decorate.format_topic_areas
      =@script.title
      =@script.decorate.format_tags
    %p=markdown @script.description

  .medium-4.columns
    .callout
      Show source:
      =succeed "," do
        =link_to "current (antcat.org)", source_database_script_path(@script)
      =link_to "GitHub (dev)", @script.decorate.github_url

      %br
      Results generated
      =@script.decorate.cached_when
      =link_to "Regenerate", regenerate_database_script_path(@script), class: "btn-normal btn-tiny"

      -if @script.respond_to? :to_csv
        %br
        Export as:
        =link_to "csv", database_script_path(@script, format: :csv), class: "btn-normal btn-tiny"

.row.column
  .callout
    =@cached_render

%small.right
  Script runtime:
  =@used_cached ? "[used cache]" : "#{@render_duration} seconds"
