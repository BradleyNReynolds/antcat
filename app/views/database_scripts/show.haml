-@title = @database_script.title
-breadcrumb :database_script, @database_script

-content_for :head do
  =javascript_include_tag "sortable_tables"

=content_for :breadcrumbs_right do
  =link_to "Show source code", @database_script.decorate.github_url, class: "btn-normal"
  -if @database_script.respond_to? :to_csv
    =link_to "Export as CSV", database_script_path(@database_script, format: :csv), class: "btn-normal"

.row.collapse
  .medium-8.columns
    %h5
      -if @database_script.category.present?
        =succeed ":" do
          =@database_script.category
      =@database_script.title
      =@database_script.decorate.format_tags
    %p=markdown @database_script.description, sanitize_content: false

    -if @database_script.issue_description.present?
      %h6
        %strong Issue description
        %p=@database_script.issue_description

    -if @database_script.related_scripts.present?
      %h6
        %strong Related scripts
      %ul
        -@database_script.related_scripts.each do|related_script|
          -# NOTE: Hide links to itself, to make it easier to copy-paste `related_scripts`s.
          -next if related_script.is_a? @database_script.class
          %li=link_to related_script.title, database_script_path(related_script)

.row.column
  .callout
    =@rendered

%small.right
  Script runtime: #{@render_duration} seconds
