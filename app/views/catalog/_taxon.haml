-taxon = taxon.decorate

-if user_can_edit?
  .buttons_right
    =taxon.editor_buttons

    -open_tasks = @taxon.tasks.open
    -if open_tasks.present?
      #linked_tasks.callout
        %p Related open tasks:
        =format_open_tasks open_tasks

=taxon.header

-unless taxon.original_combination?
  =taxon.statistics
  =taxon.genus_species_header_notes_taxt
  =taxon.headline

  -if taxon.history_items.present?
    .history
      -taxon.history_items.each do |history_item|
        =add_period_if_necessary Taxt.to_string(history_item.taxt)

  =taxon.child_lists
  =taxon.references
  =taxon.change_history
