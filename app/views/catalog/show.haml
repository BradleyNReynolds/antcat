-@title = "#{@taxon.name.epithet}"
-breadcrumb @taxon

#taxon_browser
  =show_hide_menu

  %ul.accordion{"data-accordion" => "", "data-allow-all-closed" => "true", "data-multi-expand" => "true"}
    =render   'rank',  rank: :subfamily, items: @subfamilies,selected_item: @subfamily, parent: @family,    show_none: true
    -if session[:show_tribes] && @subfamily != 'none'
      =render 'rank',  rank: :tribe,     items: @tribes,     selected_item: @tribe,     parent: @subfamily, show_none: true
    =render   'rank',  rank: :genus,     items: @genera,     selected_item: @genus
    -if session[:show_subgenera]
      =render 'rank',  rank: :subgenus,  items: @subgenera,  selected_item: @subgenus
    =render   'rank',  rank: :species,   items: @specieses,  selected_item: @species

    =render 'taxon_key'

#taxon_description
  =render 'catalog/taxon', taxon: @taxon

#delete_message.delete-modal{type: 'hidden'}
