- @title = "#{@taxon.name.epithet}"

#catalog
  = render 'catalog/taxon', taxon: @taxon
  %div{:class => "delete-modal", :type => 'hidden', :id => "delete_message"}

  #splitter

  -# This is the lower half of the table for browsing
  .index
    = render   'rank', rank: :subfamily,items: @subfamilies,selected_item: @subfamily, parent: nil,        id: @id, child: @child, options: {can_show_unavailable: true, show_none: 'none', hideable_child_name: 'tribes'}
    - if session[:show_tribes] and @subfamily != 'none'
      = render 'rank', rank: :tribe,    items: @tribes,     selected_item: @tribe,     parent: @subfamily, id: @id, child: @child, options: {hideable_name: 'tribes', show_none: 'none'}
    = render   'rank', rank: :genus,    items: @genera,     selected_item: @genus,     parent: nil,        id: @id, child: @child, options: {hideable_child_name: 'subgenera'}
    - if session[:show_subgenera]
      = render 'rank',  rank: :subgenus, items: @subgenera,  selected_item: @subgenus,  parent: nil,        id: @id, child: @child, options: {hideable_name: 'subgenera'}
    = render  'rank',  rank: :species,  items: @specieses,  selected_item: @species,   parent: nil,        id: @id, child: @child, options: {}
