-@title = 'Latest Additions'
-breadcrumb :references_latest_additions

.buttons_right
  =link_to "New", new_reference_path, class: "btn-new" if user_can_edit?

%table.references
  %thead
    %th Reference
    %th Created

    -if user_can_edit?
      %th Review status
      %th Review
      %th Set as default

  -@references.each do |reference|
    %tr
      %td=render 'reference', reference: reference

      =render 'references/latest_additions_controls', reference: reference

=will_paginate @references