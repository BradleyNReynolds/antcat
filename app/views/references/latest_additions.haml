-@title = 'Latest additions'

=render 'references_page_header'

%table.references
  %tr
    %td
    %td.date_header Created

    -if user_can_edit?
      %td.review_state_header Review status
      %td.default_reference_status_header

  -@references.each do |reference|
    %tr
      %td=render 'reference', reference: reference

      =render 'references/latest_additions_controls', reference: reference

= will_paginate @references