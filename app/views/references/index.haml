-@title = 'References'
-breadcrumb :all_references

-content_for :head do
  =javascript_include_tag 'optimal-select.min'

=render "references_title"

-# Until we find a new home for this guy
.left=link_to "New", new_reference_path, class: "btn-new" if user_can_edit?

-# table.references is used in tests
%table.references
  -@references.each do |reference|
    %tr
      %td=render 'reference', reference: reference

=will_paginate @references