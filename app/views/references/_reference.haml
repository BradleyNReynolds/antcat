- id = "reference_#{reference.id}"
- css_class << ' ' << id

%div{id: id, class: css_class, 'data-reference-id' => reference.id, 'data-taxt' => Taxt.to_editable_reference(reference)}
  %table.reference_table
    %tr
      %td.reference_item
        = render 'display', :reference => reference if !reference.new_record? && reference.errors.empty?
        - if user_can_edit?
          = render 'form', reference: reference, possible_duplicate: @possible_duplicate
