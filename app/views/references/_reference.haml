.reference
  -reference = reference.decorate
  =reference.plain_text
  =reference.format_reference_document_link
  -if current_user
    %span.show-on-hover
      -if user_is_at_least_helper?
        =link_to "Edit", edit_reference_path(reference), class: "btn-normal btn-very-tiny"
      =link_to "History", reference_history_index_path(reference), class: "btn-normal btn-very-tiny"
      =link_to "What Links Here", reference_what_links_here_index_path(reference), class: "btn-normal btn-very-tiny"
      =set_as_default_reference_button reference, very_tiny: true

  -if reference.public_notes?
    %p.notes
      %span.note Notes:
      =reference.public_notes
  -if current_user
    -if reference.editor_notes?
      %p.notes
        %span.note Editor notes:
        =reference.editor_notes
    -if reference.taxonomic_notes?
      %p.notes
        %span.note Taxonomic notes:
        =reference.taxonomic_notes
