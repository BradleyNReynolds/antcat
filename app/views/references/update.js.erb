var id = <%= @reference.id %>;
var $form = $('#reference_form_' + id);
var $reference = $('#reference_' + id);
var html = '<%= escape_javascript(render(:file => "/references/reference")) %>';

$spinnerContainer = $('button', $form).parent();
$spinnerContainer.spinner('remove');

$reference.html(html);
var $display = $('#reference_display_' + id);
$display.show();
var $form = $('#reference_form_' + id);
$form.hide();
$display.effect("highlight", {}, 3000);
