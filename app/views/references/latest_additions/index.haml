-@title = 'Latest Additions'
-breadcrumb :references_latest_additions

-if user_can_edit?
  .buttons_right
    =link_to "New", new_reference_path, class: "btn-normal"

%table.references
  %thead
    %th Reference
    %th Created
    -if user_can_edit?
      %th Review status
      %th Review
      %th Set as default
    %th
  -@references.each do |reference|
    %tr
      %td=render 'references/reference', reference: reference
      %td.no-wrap-align-top=a_timestamp_formatter reference.created_at
      -if user_can_edit?
        =render 'controls', reference: reference
      %td=link_to "Show", reference_path(reference), class: "btn-normal"

=will_paginate @references
