- content_for :head do
  = stylesheet_link_tag 'references'
  = javascript_include_tag 'references', 'reference_autocompletion', 'ext/jquery.form'

#subheader
  = render :partial => 'shared/search'
  .clear
  %hr

  - unless @references.present?
    No results found

  - if user_signed_in?
    %p
      %a.add_reference_link{:href => '#'}
        Add reference

%table.references

  - for reference in @references
    %tr.reference_row
      %td
        = render :partial => 'reference', :locals => {:reference => reference, :css_class => 'reference'}

  - if user_signed_in?
    %tr.reference_template_row
      %td
        = render :partial => 'reference', :locals => {:reference => nil, :css_class => 'reference_template'}

%div= will_paginate @references
