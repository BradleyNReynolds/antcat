- @title = 'Bibliography'

- content_for :head do
  = javascript_include_tag 'ext/jquery.spinner', 'ext/jquery.ui.autocomplete.selectFirst', 'ext/jquery.form', 'ext/jquery.a-tools-1.5.2'
  = javascript_include_tag 'references', 'reference_autocompletion'
  = stylesheet_link_tag 'references'

- content_for :page_header do

  #navigation_bar
    - form_tag references_path, :method => 'get', :id => 'search_form' do
      .actions
        = link_to 'Show latest additions', references_path(:commit => 'new')
        - if user_signed_in?
          |
          = link_to 'Show latest changes', references_path(:commit => 'review')
          |
          = link_to 'Edit journals', journals_path
      .search
        Search for
        = text_field_tag "q", params[:q]
        = submit_tag  "Go &#187;"

  .title
    %h2.left ANTBIB
    %h2.left A Bibliography of Ant Systematics
    %h3.right by Philip S. Ward, et al.
    .clear

- unless @references.present?
  No results found

- if user_signed_in?
  %p
    %a.add_reference_link{:href => '#'}
      Add reference

%table.references

  - if @reviewing
    %tr
      %td
      %td.date_header
        Updated

  - if @seeing_whats_new
    %tr
      %td
      %td.date_header
        Created

  - for reference in @references
    %tr.reference_row
      %td
        = render :partial => 'reference', :locals => {:reference => reference, :publisher_string => @publisher_string, :css_class => 'reference'}
      - if @reviewing
        %td.date
          = format_timestamp reference.updated_at
      - if @seeing_whats_new
        %td.date
          = format_timestamp reference.created_at

  - if user_signed_in?
    %tr.reference_template_row
      %td
        = render :partial => 'reference', :locals => {:reference => nil, :publisher_string => @publisher_string, :css_class => 'reference_template'}

%div= will_paginate @references
