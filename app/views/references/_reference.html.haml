- reference ||= Reference.new
%div{:id => "reference_#{reference.id}", :class => css_class}
  %table
    %tr
      %td.icons
        %a.icon.edit{:title => 'edit', :href => '#'}
          = image_tag 'edit.png'
        %a.icon.add{:title => 'add', :href => '#'}
          = image_tag 'add.png'
        %a.icon.copy{:title => 'copy', :href => '#'}
          = image_tag 'copy.png'
        %a.icon.delete{:title => 'delete', :href => '#'}
          = image_tag 'delete.png'
      %td{:style => 'vertical-align: top'}
        = render :partial => 'display', :locals => {:reference => reference}
        - if user_signed_in?
          = render :partial => 'form', :locals => {:reference => reference}
        = render :partial => 'shared/coins', :locals => {:reference => reference}
