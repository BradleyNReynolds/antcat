-@title = "Editor's Panel"
-breadcrumb :editors_panel

.row
  .large-3.medium-4.columns
    -# TODO probably inline `@count`.
    %h5 Unreviewed changes
    %ul.no-bullet
      %li
        .label=@count[:open_issues]
        =link_to "Open issues", issues_path
      %li
        .label=@count[:unreviewed_references]
        =link_to "Unreviewed references", latest_additions_references_path
      %li
        .label=@count[:unreviewed_catalog_changes]
        =link_to "Unreviewed catalog changes", unreviewed_changes_path
      %li
        .label=@count[:pending_user_feedbacks]
        =link_to "Pending user feedback emails", feedback_index_path
      %li
        .label=@count[:unread_site_notices]
        =link_to "Unread site notices", site_notices_path

  .large-3.medium-4.columns
    %h5 Misc. links
    %ul.no-bullet
      %li=link_to 'Activity feed', activities_path
      %li=link_to 'Help pages (wiki hosted at GitHub)', "https://github.com/calacademy-research/antcat/wiki"
      %li
        =link_to "List of users", users_path
        =surround "(", ")" do
          =link_to "email users", emails_users_path
      %li=link_to 'Invite people to AntCat', invite_users_path
      %li=link_to "Markdown formatting help", markdown_formatting_help_path
      %li
        =link_to "History item search", taxon_history_items_path
        =new_label
      %li
        =link_to "Reference section search", reference_sections_path
        =new_label

  .large-3.medium-4.columns
    -if current_user
      %h5 My account
      %ul.no-bullet
        %li
          .label=current_user.unseen_notifications.count
          =link_to "My notifications", notifications_path
        %li=link_to "Change my password/name/email", edit_user_registration_path
        %li=link_to "My user page", user_path(current_user)

  .large-3.medium-4.columns
    %h5 AntCat administration
    %ul.no-bullet
      %li=link_to 'Edit tooltips', tooltips_path
      -if user_is_superadmin?
        %li=link_to "Admin dashboard", admin_root_path
      %li=link_to "PaperTrail versions", versions_path
      %li=link_to 'Database scripts', database_scripts_path

.row.margin-top
  .large-12.columns
    %h5 Most recent activity (#{link_to("see more", activities_path)})
    =render "activities/table", activities: @recent_activities

.row.margin-top
  .large-12.columns
    %h5 Most recent comments (#{link_to("see more", comments_path)})
    =render "comments/comments_table", comments: @recent_comments

-if Rails.env.development?
  .row.margin-top
    .medium-12.columns
      %h5 dev-only links
      %ul
        %li=link_to "Lazy links", page_path("lazy_links")
        %li=link_to "Toggle dev CSS", widget_tests_toggle_dev_css_path
